<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:background="#5EFFA407"
        android:textSize="20dp"
        android:fontFamily="@string/fab_transformation_scrim_behavior"
        android:gravity="center"
        android:hint="Thêm Danh Mục Sản Phẩm"></TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text"
        android:hint="Enter name"
        android:id="@+id/txtNameAddCategory"
        android:layout_marginTop="150dp"
        ></EditText>
    <TextView
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:hint="Image : "
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:layout_marginLeft="22dp"></TextView>

    <ImageView
        android:id="@+id/imageViewAddCategory"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        ></ImageView>

    <Button
        android:id="@+id/btnImageCategory"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/edit_button"
        android:text="Tải lên"></Button>
    <Button
        android:background="@drawable/edit_button"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:text="Exit"
        android:id="@+id/btnExitCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"></Button>
    <Button
        android:background="@drawable/edit_button"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:text="Thêm"
        android:id="@+id/btnAddCategoryMan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"></Button>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botton_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?android:windowBackground"
        app:menu="@menu/botton_nav"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>