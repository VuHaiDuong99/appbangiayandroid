<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:background="#8BC34A"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="Chi Tiết Sản Phẩm"
            android:textSize="20dp"></TextView>

        <LinearLayout
            android:layout_width="396dp"
            android:layout_height="262dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewDetail"
                android:layout_width="185dp"
                android:layout_height="240dp"

                android:layout_margin="5dp"></ImageView>

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="260dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNameDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Tên Sản Phẩm : "
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/txtPriceDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Giá Sản Phẩm : "
                    android:textColor="#E91E63"
                    android:textSize="20dp"></TextView>

                <Spinner
                    android:id="@+id/spiner"
                    android:layout_width="176dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_spinner"
                    android:padding="15dp"
                    android:textAlignment="center"></Spinner>

                <Button
                    android:id="@+id/btnGioHang"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_button"
                    android:text="Thêm Vào Giỏ Hàng"

                    ></Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Mô Tả : "
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtMotaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botton_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?android:windowBackground"
        app:menu="@menu/botton_nav"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>